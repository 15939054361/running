.bg {
  width: 100%;
  height: 100vh;
  position: fixed;
  z-index: -1;
  top: 0;
}
.wrap {
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.wrap .module-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.wrap .module {
  width: 95%;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin: 38vh auto 0;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
}
.wrap .module .title {
  padding: 0rpx 0 10rpx;
  font-size: 40rpx;
  color: #01bd03;
  text-align: center;
  border-bottom: 4rpx solid #01bd03;
  position: relative;
}
.wrap .module .title button {
  padding: 0;
  margin-top: 0;
  width: 120rpx;
  position: absolute;
  right: 10rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  top: 0rpx;
  line-height: 2;
}
.wrap .avatar-box {
  width: 150rpx;
  height: 150rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
  margin: 20rpx auto;
}
.wrap open-data {
  display: block;
  width: 100%;
  height: 100%;
}
.wrap .show-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.wrap .show-box-sub {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.wrap .show-box-sub text:first-child {
  color: #01bd03;
  font-size: 36rpx;
}
.wrap .share {
  width: 40%;
  padding: 10rpx;
  background-color: #01bd03;
  color: #fff;
  line-height: 1.5;
  text-align: center;
  font-size: bolder;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin: 35rpx auto 0;
}
.wrap button {
  width: 50%;
  margin-top: 20rpx;
  background-color: #01bd03;
  color: #fff;
}
.position_btn {
  width: calc(100% - 44rpx);
  height: 86rpx;
  line-height: 86rpx;
  margin: 20rpx auto 0;
  text-align: center;
  font-size: 31rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: white;
  background: #8dc63f;
}
.position_btn::after {
  display: none;
}
[v-cloak] {
  display: none;
}

